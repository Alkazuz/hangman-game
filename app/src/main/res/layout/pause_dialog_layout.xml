<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:backgroundTint="@color/material_dynamic_neutral0"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_resume"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginLeft="10sp"
            android:background="@drawable/btnresume"
            android:onClick="onResumeButtonClick" />

        <ImageButton
            android:id="@+id/button_restart"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginLeft="10sp"
            android:background="@drawable/restartbtn"
            android:onClick="onRestartButtonClick" />

        <ImageButton
            android:id="@+id/button_desist"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginLeft="10sp"
            android:background="@drawable/btndesist"
            android:onClick="onExitButtonClick" />
    </LinearLayout>

</LinearLayout>
